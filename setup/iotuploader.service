[Unit]
Description=iotuploader service
After=network.target

[Service]
Type=notify
User=iotuploader
Group=iotuploader
RuntimeDirectory=iotuploader
EnvironmentFile=/home/iotuploader/.iotenv
WorkingDirectory=/home/iotuploader/iot-uploader
ExecStart=/usr/local/bin/gunicorn iotuploader.main:app
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true

[Install]
WantedBy=multi-user.target

